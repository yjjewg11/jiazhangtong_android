<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_padding"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/login_edit_bg1"
            android:orientation="horizontal">

            <TextView
                style="@style/loginTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/register_spec"
                android:paddingLeft="@dimen/small_padding"
                android:text="手机号码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/register_mobile"
                    style="@style/loginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/layout_clean_6"
                    android:background="@android:color/transparent"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:maxLength="11" />

                <RelativeLayout
                    android:id="@+id/layout_clean_6"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_clean_6"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clean"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/login_edit_bg1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_pwd_text"
                style="@style/loginTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/register_spec"
                android:paddingLeft="@dimen/small_padding"
                android:text="用户密码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/register_pwd"
                    style="@style/loginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/layout_clean_7"
                    android:background="@android:color/transparent"
                    android:hint="请输入用户密码"
                    android:inputType="textPassword"
                    android:maxLength="18" />

                <RelativeLayout
                    android:id="@+id/layout_clean_7"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_clean_7"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clean"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/normal_padding"
            android:background="@drawable/login_edit_bg1"
            android:orientation="horizontal">

            <TextView
                style="@style/loginTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/register_spec"
                android:paddingLeft="@dimen/small_padding"
                android:text="确认密码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/register_pwd_double"
                    style="@style/loginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/layout_clean_8"
                    android:background="@android:color/transparent"
                    android:hint="再次输入密码"
                    android:inputType="textPassword"
                    android:maxLength="18" />

                <RelativeLayout
                    android:id="@+id/layout_clean_8"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_clean_8"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clean"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/normal_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_toLeftOf="@+id/register_count_down"
                android:background="@drawable/login_edit_bg1"
                android:orientation="horizontal">

                <TextView
                    style="@style/loginTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/small_padding"
                    android:drawableRight="@drawable/register_spec"
                    android:paddingLeft="@dimen/small_padding"
                    android:text="验证码" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/register_sms"
                        style="@style/loginEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/layout_clean_9"
                        android:background="@android:color/transparent"
                        android:hint="请输入验证码"
                        android:inputType="number" />

                    <RelativeLayout
                        android:id="@+id/layout_clean_9"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/iv_clean_9"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/clean"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <com.wj.kindergarten.compounets.CountDownButton
                android:id="@+id/register_count_down"
                style="@style/loginTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/login_button_selector"
                android:text="获取"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/register_action"
            style="@style/loginTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/title_height"
            android:background="@drawable/login_button_selector"
            android:padding="@dimen/small_padding"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>