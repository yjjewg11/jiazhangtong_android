<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.wj.kindergarten.compounets.CircleImage
            android:id="@+id/item_sign_list_head"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/hint_gray"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_sign_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间："
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/item_sign_list_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地点："
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/item_sign_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打卡人："
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/item_sign_list_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打卡类型："
            android:textColor="@color/hint_gray"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>
</LinearLayout>