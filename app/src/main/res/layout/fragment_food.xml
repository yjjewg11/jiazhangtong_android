<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/normal_padding"
        android:background="@color/title_bg"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding">

        <com.wj.kindergarten.compounets.CircleImage
            android:id="@+id/food_head"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/food_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_toRightOf="@+id/food_head"
            android:text="2015-11-22"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/food_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/normal_padding"
            android:text="星期一"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/food_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="早餐"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/break_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="早上加餐"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/break_add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="午餐"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/lunch_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="中午加餐"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/lunch_add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="晚餐"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/diner_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:text="营养分析"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/food_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@drawable/login_edit_bg1"
            android:minHeight="96dp"
            android:padding="@dimen/small_padding" />

        <include layout="@layout/layout_common_reply" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginTop="@dimen/condition_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@drawable/none_info" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="暂时没有相关信息"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="看看别的内容吧"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>