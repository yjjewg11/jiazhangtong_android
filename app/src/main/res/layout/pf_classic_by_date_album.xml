<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/pf_tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/redline"
            android:drawablePadding="@dimen/margin_15"
            android:padding="@dimen/margin_10"
            android:text="2015 - 11 1000 "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/pf_pic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_10"
            android:text="共10000张"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pf_classic_linear"
        android:paddingRight="@dimen/margin_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/pf_classic_album_linear_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/pf_classic_album_0"
                android:scaleType="fitXY"
                android:src="@drawable/new_album"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pf_classic_album_1"
                android:layout_marginLeft="@dimen/margin_3"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/play"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pf_classic_album_linear_2"
            android:layout_marginTop="@dimen/margin_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/pf_classic_album_2"
                android:scaleType="fitXY"
                android:src="@drawable/play"
                android:layout_width="150dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pf_classic_album_3"
                android:layout_marginLeft="@dimen/margin_3"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/new_album"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pf_classic_album_linear_3"
            android:layout_marginTop="@dimen/margin_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/pf_classic_album_4"
                android:scaleType="fitXY"
                android:src="@drawable/new_album"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pf_classic_album_5"
                android:layout_marginLeft="@dimen/margin_3"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/play"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>