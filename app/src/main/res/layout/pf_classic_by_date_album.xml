<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/pf_tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/redline"
            android:drawablePadding="@dimen/margin_15"
            android:padding="@dimen/margin_10"
            android:text="2015 - 11 1000 "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/pf_pic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_10"
            android:text="共10000张"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="@dimen/margin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@drawable/zhanweitu"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:id="@+id/pf_iv_0" />

        <LinearLayout
            android:layout_toLeftOf="@+id/pf_iv_0"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/pf_iv_0"
            android:layout_toRightOf="@+id/pf_iv_0"
            android:id="@+id/linearLayout3">

            <ImageView
                android:id="@+id/pf_iv_1"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pf_iv_2"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/pf_iv_0"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:id="@+id/linearLayout4">
            <ImageView
                android:id="@+id/pf_iv_3"
                android:layout_marginRight="@dimen/margin_5"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="wrap_content"
                android:layout_height="115dp" />
            <ImageView
                android:id="@+id/pf_iv_4"
                android:layout_marginRight="@dimen/margin_5"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="wrap_content"
                android:layout_height="115dp" />
        </LinearLayout>

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/zhanweitu"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:id="@+id/pf_iv_5"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_toRightOf="@+id/pf_iv_0"
            android:layout_alignRight="@+id/linearLayout3" />

    </RelativeLayout>


</LinearLayout>