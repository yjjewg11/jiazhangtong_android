<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/margin_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ImageView
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pf_gallery_image"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="这是备注"
            android:id="@+id/pf_gallery_annotation" />

        <TextView
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/location_pf"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="成都市"
            android:id="@+id/pf_gallery_location" />

        <TextView
            android:drawablePadding="@dimen/margin_3"
            android:drawableLeft="@drawable/pf_peopel"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="妈妈还是爸爸"
            android:id="@+id/pf_gallery_people" />
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>