<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_status_iv"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="晨钟英语学校"
        android:id="@+id/course_status_train_school_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/course_status_iv"
        android:layout_marginLeft="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="学生：小明"
        android:id="@+id/course_status_student"
        android:layout_below="@+id/course_status_train_school_name"
        android:layout_alignLeft="@+id/course_status_train_school_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="班级：英语一班"
        android:id="@+id/course_status_class"
        android:layout_below="@+id/course_status_student"
        android:layout_alignLeft="@+id/course_status_student" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="学校：城中教育中心"
        android:id="@+id/course_status_education"
        android:layout_below="@+id/course_status_class"
        android:layout_alignLeft="@+id/course_status_class" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff4966"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="近期上课时间：2015-12-12"
        android:id="@+id/course_status_open_time"
        android:layout_below="@+id/course_status_education"
        android:layout_alignLeft="@+id/course_status_education" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#bbbbbb"
        android:id="@+id/textView22"
        android:layout_below="@+id/course_status_open_time"
        android:layout_alignParentRight="true" />
</RelativeLayout>