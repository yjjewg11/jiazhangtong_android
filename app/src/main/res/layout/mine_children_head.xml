<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg">
w
        <RelativeLayout
            android:id="@+id/mine_child_head_rl"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mine_child_head_back">

            <com.wj.kindergarten.compounets.CircleImage
                android:id="@+id/circle_mine_image"
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:layout_height="60dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_children_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_child_head_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="周星星"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>