<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignTop="@+id/teacher_item_teacher_name"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:src="@drawable/zhanweitu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/teacher_item_head_img"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="小明老师"
            android:textSize="16sp"
            android:id="@+id/teacher_item_teacher_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/teacher_item_head_img" />
        <FrameLayout
            android:layout_marginTop="1dp"
            android:layout_alignLeft="@+id/teacher_item_teacher_name"
            android:layout_below="@+id/teacher_item_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout3">

            <include layout="@layout/common_rating_bar"/>
        </FrameLayout>

        <TextView
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="教授课程 ： 语文"
            android:id="@+id/teacher_item_class_name"
            android:layout_below="@+id/frameLayout3"
            android:layout_alignLeft="@+id/frameLayout3" />

        <TextView
            android:layout_below="@+id/teacher_item_class_name"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="多年教学经验..."
            android:textSize="13sp"
            android:id="@+id/teacher_item_introduce"
            android:layout_alignLeft="@+id/teacher_item_class_name" />

    </RelativeLayout>

</LinearLayout>