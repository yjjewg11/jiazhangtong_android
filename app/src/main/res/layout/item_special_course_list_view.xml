<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"

    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:id="@+id/rl_all_content"
        android:background="@drawable/setting_item_click_selector_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_alignBottom="@+id/item_special_course_list_view_tv_adresss"
            android:layout_alignTop="@+id/item_class_name"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:paddingBottom="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/item_special_course_list_view_image_view"
            android:src="@drawable/zhanweitu"
            android:layout_alignParentLeft="true" />

        <TextView
            android:paddingRight="@dimen/margin_5"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#49a3ff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="层中幼儿英语"
            android:id="@+id/item_class_name"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_special_course_list_view_image_view"
            android:layout_toLeftOf="@+id/item_special_course_list_view_tv_study_people" />

        <FrameLayout
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/item_class_name"
            android:layout_below="@+id/item_class_name"
            android:id="@+id/rating_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/common_rating_bar"/>
        </FrameLayout>

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="晨中教育中心"
            android:id="@+id/item_special_course_list_view_tv_edcucation"
            android:layout_below="@+id/rating_fl"
            android:layout_alignLeft="@+id/rating_fl" />

        <TextView
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="教学点：武侯区"
            android:id="@+id/item_special_course_list_view_tv_adresss"
            android:layout_below="@+id/item_special_course_list_view_tv_edcucation"
            android:layout_alignLeft="@+id/item_special_course_list_view_tv_edcucation"
            android:layout_toLeftOf="@+id/item_special_course_list_view_tv_distance" />

        <TextView
            android:textSize="12sp"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="338人已经学"
            android:id="@+id/item_special_course_list_view_tv_study_people"
            android:layout_alignTop="@+id/rating_fl"
            android:layout_alignParentRight="true" />

        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1.2km"
            android:paddingBottom="@dimen/margin_5"
            android:id="@+id/item_special_course_list_view_tv_distance"
            android:layout_below="@+id/item_special_course_list_view_tv_edcucation"
            android:layout_alignRight="@+id/item_special_course_list_view_tv_study_people" />
    </RelativeLayout>

</RelativeLayout>