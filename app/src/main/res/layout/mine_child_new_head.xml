<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/childen_bgpicter_android_child"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:scaleType="center"
            android:visibility="visible"
            android:id="@+id/mine_child_new_head_add_child"
            android:src="@drawable/tianjiaxiaohai"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="45dp" />


        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.wj.kindergarten.compounets.CircleImage
                android:layout_width="70dp"
                android:background="@drawable/mine_circle_background"
                android:layout_height="70dp"
                android:id="@+id/mine_child_new_head_circle_img"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true" />

            <TextView
                android:paddingLeft="@dimen/margin_20"
                android:drawableRight="@drawable/boy_child"
                android:drawablePadding="@dimen/margin_5"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="周星星"
                android:id="@+id/mine_child_new_head_circle_name"
                android:layout_below="@+id/mine_child_new_head_circle_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp" />

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:padding="@dimen/margin_5"
                android:textColor="@color/white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4岁"
                android:background="@drawable/mine_child_new_head_aage"
                android:id="@+id/mine_child_new_head_circle_age"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/mine_child_new_head_circle_img"
                android:layout_marginLeft="15dp" />

        </RelativeLayout>

        <ImageView
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:src="@drawable/all_arrow"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/mine_child_new_head_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

</LinearLayout>