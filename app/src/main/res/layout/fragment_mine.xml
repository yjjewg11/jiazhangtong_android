<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/title_bg">

            <ImageView
                android:id="@+id/mine_add_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_9dp"
                android:layout_marginTop="@dimen/margin_9dp"
                android:src="@drawable/tianjiaxiaohai"
                android:visibility="invisible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <include layout="@layout/mine_children_head" />
            </FrameLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mine_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:background="@drawable/setting_item_click_selector"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/youjiantou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/fragment_mine_child_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/fragment_mine_child_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/condition_height"
                        android:layout_marginLeft="@dimen/normal_padding"
                        android:layout_marginRight="@dimen/normal_padding"
                        android:background="@drawable/setting_item_click_selector"
                        android:drawableLeft="@drawable/minemybaby_i"
                        android:drawablePadding="@dimen/small_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="我的小孩"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text" />
                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_item_click_selector"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e0e0e0"
                android:visibility="visible" />


            <TextView
                android:id="@+id/mine_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/condition_height"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_marginRight="@dimen/normal_padding"
                android:background="@drawable/setting_item_click_selector"
                android:drawableLeft="@drawable/shoucang_mine"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_special_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_item_click_selector"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/mine_course"

                android:layout_width="match_parent"
                android:layout_height="@dimen/condition_height"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_marginRight="@dimen/normal_padding"
                android:background="@drawable/setting_item_click_selector"
                android:drawableLeft="@drawable/my_kecheng"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:text="我的特长课程"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mine_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_item_click_selector"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/condition_height"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_marginRight="@dimen/normal_padding"
                android:background="@drawable/setting_item_click_selector"
                android:drawableLeft="@drawable/school"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:text="我的学校"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:background="@drawable/setting_item_click_selector"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mine_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/condition_height"
                android:layout_marginLeft="@dimen/normal_padding"
                android:drawableLeft="@drawable/shezhigreen"
                android:drawablePadding="@dimen/small_padding"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/normal_padding"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hint_gray"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>