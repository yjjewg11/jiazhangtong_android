<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/margin_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            style="@style/pf_classic_by_date"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@drawable/zhanweitu"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/pf_classic_by_date_three_iv_one" />

        <LinearLayout
            android:layout_below="@+id/pf_iv_0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:id="@+id/linearLayout4">
            <ImageView
                android:id="@+id/pf_classic_by_date_three_iv_two"
                android:layout_marginRight="@dimen/margin_5"
                style="@style/pf_classic_by_date"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/pf_classic_by_date_three_iv_three"
                android:layout_marginRight="@dimen/margin_5"
                style="@style/pf_classic_by_date"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>

</LinearLayout>