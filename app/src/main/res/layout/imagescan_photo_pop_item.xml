<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="18dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/photo_pop_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@id/photo_pop_item_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/photo_pop_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:textSize="@dimen/normal_text"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/photo_pop_item_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/normal_text"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photo_pop_item_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:src="@drawable/login_remember"
        android:visibility="gone" />
</RelativeLayout>