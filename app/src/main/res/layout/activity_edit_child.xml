<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_division"
    android:orientation="vertical">

    <include layout="@layout/title_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/background_division"                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.wj.kindergarten.compounets.CircleImage
                android:id="@+id/child_edit_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/big_padding" />

            <TextView
                android:id="@+id/child_edit_head_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_padding"
                android:text="更换头像"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="姓名"
                    android:id="@+id/textView21"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:hint="请输入宝宝姓名"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_name"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView21"
                    android:layout_marginLeft="59dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="昵称"
                    android:id="@+id/textView22"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:hint="请输入宝宝昵称"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_small_name"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView22"
                    android:layout_marginLeft="59dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="性别"
                    android:id="@+id/textView23"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:hint="女"
                    android:textColorHint="@color/color_313131"
                    android:textColor="@color/color_313131"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_sex"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView23"
                    android:layout_marginLeft="59dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="生日"
                    android:id="@+id/textView24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:hint="选择出生日期"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_birthday"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView24"
                    android:layout_marginLeft="59dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="身份证"
                    android:id="@+id/textView25"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:phoneNumber="true"
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:hint="请输入宝宝身份证号码"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_ID_card"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView25"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/chagechildinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="我是宝宝的"
                    android:id="@+id/textView26"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:textColorHint="@color/color_313131"
                    android:layout_alignLeft="@+id/et_name"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@drawable/youjiantou"
                    style="@style/edit_child_info"
                    android:textColor="@color/color_313131"
                    android:hint="爸爸"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/et_family"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView26" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>