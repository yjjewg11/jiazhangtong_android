<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/title_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/normal_padding">

        <LinearLayout
            android:id="@+id/child_edit_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_padding"
                android:drawableLeft="@drawable/mine_pre_text"
                android:drawablePadding="@dimen/small_padding"
                android:maxLength="10"
                android:paddingBottom="@dimen/small_padding"
                android:paddingTop="@dimen/small_padding"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_40"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_marginRight="@dimen/normal_padding"
                android:background="@drawable/login_edit_bg1">

                <EditText
                    android:id="@+id/child_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ll_clean_1"
                    android:background="@color/translate"
                    android:gravity="center_vertical"
                    android:hint="请输入姓名"
                    android:padding="@dimen/small_padding"
                    android:text=""
                    android:textSize="@dimen/normal_text" />

                <RelativeLayout
                    android:id="@+id/ll_clean_1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_clean_1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clean"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="电话"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_40"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@drawable/login_edit_bg1">

            <EditText
                android:id="@+id/child_edit_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ll_clean_2"
                android:background="@color/translate"
                android:gravity="center_vertical"
                android:hint="请输入电话"
                android:padding="@dimen/small_padding"
                android:text=""
                android:textSize="@dimen/normal_text" />

            <RelativeLayout
                android:id="@+id/ll_clean_2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_clean_2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_padding"
            android:drawableLeft="@drawable/mine_pre_text"
            android:drawablePadding="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="工作单位"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_40"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@drawable/login_edit_bg1">

            <EditText
                android:id="@+id/child_edit_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ll_clean_3"
                android:background="@color/translate"
                android:gravity="center_vertical"
                android:hint="请输入工作单位"
                android:padding="@dimen/small_padding"
                android:text=""
                android:textSize="@dimen/normal_text" />

            <RelativeLayout
                android:id="@+id/ll_clean_3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_clean_3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>