<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="这是描述"
            android:id="@+id/pf_gallery_fragment_extra_info_description" />


        <TextView
            android:id="@+id/pf_fragment_extra_dianzan_count"
            android:drawablePadding="@dimen/margin_10"
            android:drawableLeft="@drawable/dianzanxiao"
            android:layout_marginTop="@dimen/margin_15"
            android:text="他爸爸点赞"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/color_cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginTop="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="时间"
        android:id="@+id/pf_gallery_fragment_extra_info_time" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="地点"
            android:id="@+id/pf_gallery_fragment_extra_info_address" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="老师"
            android:id="@+id/pf_gallery_fragment_extra_info_human" />
    </LinearLayout>

</LinearLayout>