<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <TextView
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/imagescan_upload_time"
        android:layout_alignTop="@+id/imagescna_upload_image"
        android:layout_toRightOf="@+id/imagescna_upload_image" />

    <TextView
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/imagescan_upload_count"
        android:layout_below="@+id/imagescan_upload_time"
        android:layout_toRightOf="@+id/imagescna_upload_image" />

    <ImageView
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imagescna_upload_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

    </RelativeLayout>
</RelativeLayout>