<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/title_normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/single_pf_edit_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu" />

    <EditText
        android:id="@+id/single_pf_edit_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/single_pf_edit_image"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/single_pf_edit_image"
        android:background="@null"
        android:hint="对照片添加描述" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/single_pf_edit_image"
        android:layout_below="@+id/single_pf_edit_edit"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:paddingRight="@dimen/margin_10">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/color_cccccc" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/place_jingpin"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="拍摄地点"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:paddingLeft="@dimen/margin_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/single_pf_edit_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/textView42"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="未知"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/textView42" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:paddingRight="@dimen/margin_10">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/color_cccccc" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/time_pf_edit"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="拍摄时间"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:paddingLeft="@dimen/margin_10"
                android:editable="false"
                android:id="@+id/single_pf_edit_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/textView46"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="未知"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/textView46" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_cccccc" />
    </LinearLayout>

    </RelativeLayout>


</LinearLayout>
