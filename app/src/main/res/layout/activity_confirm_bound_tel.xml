<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_one_first"
    tools:context="com.wj.kindergarten.ui.func.ConfirmBoundTelActivity">

    <FrameLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bound_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/confirm_bound_tel_back"
            android:textSize="15sp"
            android:textColor="#ff5a50"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="立即绑定"
            android:id="@+id/bound_tel_confirm_now"
            android:layout_gravity="center" />
        <TextView
            android:background="@drawable/confirm_bound_tel_back2"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="以后再说"
            android:id="@+id/bound_tel_confirm_later"
            android:layout_gravity="center" />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/confirm_bound_tel_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="26dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
    <ImageView
        android:src="@drawable/all_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        />
    </RelativeLayout>
</RelativeLayout>
