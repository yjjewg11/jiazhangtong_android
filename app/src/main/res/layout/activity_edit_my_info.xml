<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_height="match_parent"
    tools:context="com.wj.kindergarten.ui.messagepag.EditMyInfoActivity">

    <include layout="@layout/title_normal"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            style="@style/chagechildinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="姓名"
            android:id="@+id/textView21"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <EditText
            android:gravity="right|center_vertical"
            style="@style/edit_child_info"
            android:hint="请输入昵称"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_myInfo_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView21"
            android:layout_marginLeft="59dp" />
        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/background_division"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView

            style="@style/chagechildinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="头像"
            android:id="@+id/textView22"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/et_myinfo_iv"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:src="@drawable/touxiang"
            android:scaleType="fitXY"
            android:minWidth="35dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/background_division"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            style="@style/chagechildinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="真实姓名"
            android:id="@+id/textView23"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <EditText
            android:gravity="right|center_vertical"
            style="@style/edit_child_info"
            android:hint="请输入真实姓名"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_myInfo_relname"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView23"
            android:layout_marginLeft="59dp" />
        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/background_division"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            style="@style/chagechildinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="手机号码"
            android:id="@+id/textView24"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <EditText
            android:focusable="false"
            android:inputType="number"
            android:gravity="right|center_vertical"
            style="@style/edit_child_info"
            android:hint="暂未绑定手机号码"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_myinfo_tel"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView25"
            android:layout_marginLeft="59dp" />
        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/background_division"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
</LinearLayout>
