<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/margin_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/linearLayout3">

            <ImageView
                android:id="@+id/pf_classic_by_date_four_iv_one"
                android:layout_weight="1"
                style="@style/pf_classic_by_date"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/margin_3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginLeft="@dimen/margin_3"
                android:id="@+id/pf_classic_by_date_four_iv_two"
                android:layout_weight="1"
                style="@style/pf_classic_by_date"
                android:src="@drawable/zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/margin_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/margin_3"
                android:id="@+id/pf_classic_by_date_four_iv_three"
                style="@style/pf_classic_by_date"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="wrap_content"
                android:layout_height="180dp" />
            <ImageView
                android:layout_marginLeft="@dimen/margin_3"
                android:id="@+id/pf_classic_by_date_four_iv_four"
                style="@style/pf_classic_by_date"
                android:layout_weight="1"
                android:src="@drawable/zhanweitu"
                android:layout_width="wrap_content"
                android:layout_height="180dp" />
        </LinearLayout>


</LinearLayout>