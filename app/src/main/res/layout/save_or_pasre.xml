<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/share_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/save_pic_circle"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/save_pic_to_dicretory"
            style="@style/click_pic"
            android:text="@string/save_pic"
            android:layout_width="180dp"
            android:layout_height="40dp" />
        <View
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="@color/background_division"/>

        <TextView
            android:visibility="visible"
            style="@style/click_pic"
            android:id="@+id/pasre_two_code"
            android:text="识别二维码"
            android:layout_width="180dp"
            android:layout_height="40dp"/>
        <View
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/background_division"/>
        <TextView
            android:visibility="gone"
            style="@style/click_pic"
            android:id="@+id/scan_two_code"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="扫描二维码" />
        <View
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/background_division"/>
        <TextView
            android:visibility="gone"
            style="@style/click_pic"
            android:id="@+id/create_two_code"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="生成二维码" />
        <ImageView
            android:id="@+id/image_create_two_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/background_division"/>
        <TextView
            android:visibility="gone"
            style="@style/click_pic"
            android:id="@+id/look_for_map"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="查看地图" />
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>