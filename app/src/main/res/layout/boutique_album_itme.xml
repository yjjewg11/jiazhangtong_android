<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:paddingRight="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/boutique_album_item_image"
            android:scaleType="fitXY"
            android:src="@drawable/new_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/bianji_jpxc_jtxc"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </FrameLayout>

    <LinearLayout
        android:paddingBottom="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="这是标题,可以用"
            android:id="@+id/boutique_album_item_title" />
    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:drawablePadding="@dimen/margin_3"
            android:drawableLeft="@drawable/small_ren_jpxc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="妈妈"
            android:id="@+id/boutique_album_item_people"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_toRightOf="@+id/boutique_album_item_people"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/boutique_image_jpxc"
            android:drawablePadding="@dimen/margin_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="111张"
            android:id="@+id/boutique_album_item_time"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
    <!--<FrameLayout-->
        <!--android:layout_marginTop="@dimen/margin_10"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--<include layout="@layout/boutique_album_item_bottom"/>-->

    <!--</FrameLayout>-->
</LinearLayout>