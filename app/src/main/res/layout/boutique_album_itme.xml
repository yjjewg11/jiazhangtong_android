<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:padding="@dimen/margin_10"
        android:background="@drawable/boutique_album_item_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/boutique_album_item_image"
                android:src="@drawable/zhanweitu"
                android:scaleType="centerCrop"
                android:background="@color/share_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_gravity="bottom"
                android:paddingTop="@dimen/margin_5"
                android:background="#88000000"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingRight="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="这是标题,可以用"
                android:id="@+id/boutique_album_item_title" />

        </FrameLayout>


        <TextView
            android:padding="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="爸爸制作了几张照片"
            android:id="@+id/boutique_album_item_count"
            android:layout_alignParentTop="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:drawablePadding="@dimen/margin_10"
                android:drawableLeft="@drawable/hudongnew"
                android:textColor="#ff5a50"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/boutique_album_item_assess_count"
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ff5a50"
                    android:drawableLeft="@drawable/pf_zan"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/boutique_album_item_dianzan_count"
                    android:text="23"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>