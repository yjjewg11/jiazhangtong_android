<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="9dp"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:id="@+id/rl_all_content"
        android:background="@drawable/item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:padding="0dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_alignBottom="@+id/tv_one_line"
            android:layout_alignTop="@+id/item_class_name"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/item_special_course_list_view_image_view"
            android:src="@drawable/zhanweitu"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:paddingRight="@dimen/margin_5"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="层中幼儿英语"
            android:id="@+id/item_class_name"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_special_course_list_view_image_view" />

        <FrameLayout
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@+id/item_class_name"
            android:layout_below="@+id/item_class_name"
            android:id="@+id/rating_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/common_rating_bar"/>
        </FrameLayout>

        <TextView
            android:ellipsize="middle"
            android:singleLine="true"
            style="@style/schooltextstyle"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="教学点：武侯区"
            android:id="@+id/item_special_course_list_view_tv_adresss"
            android:layout_toLeftOf="@+id/item_special_course_list_view_tv_distance"
            android:layout_below="@+id/rating_fl"
            android:layout_alignLeft="@+id/rating_fl" />


        <TextView
            android:layout_below="@+id/tv_study_people"
            android:drawablePadding="@dimen/margin_5"
            android:drawableLeft="@drawable/juli"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1.2km"
            android:id="@+id/item_special_course_list_view_tv_distance"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="@+id/item_special_course_list_view_tv_distance"
            android:background="#e0e0e0"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_one_line"
            android:layout_below="@+id/item_special_course_list_view_tv_adresss"
            android:layout_alignLeft="@+id/item_special_course_list_view_tv_adresss" />

        <LinearLayout
            style="@style/schooltextstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="有一个优秀幼儿园"
            android:id="@+id/ll_school_medal_one"
            android:layout_alignTop="@+id/tv_one_line"
            android:layout_alignLeft="@+id/tv_one_line"
            android:orientation="vertical" />

        <ImageView
            android:layout_marginTop="@dimen/margin_5"
            android:src="@drawable/jiangbei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_madle"
            android:layout_alignTop="@+id/ll_school_medal_one"
            android:layout_alignRight="@+id/item_special_course_list_view_image_view" />

        <TextView
            android:textColor="#ff4966"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="100人就读"
            android:id="@+id/tv_study_people"
            android:layout_above="@+id/item_special_course_list_view_tv_adresss"
            android:layout_alignRight="@+id/item_special_course_list_view_tv_distance"
            android:layout_alignEnd="@+id/item_special_course_list_view_tv_distance" />

    </RelativeLayout>

</LinearLayout>