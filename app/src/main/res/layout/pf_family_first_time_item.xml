<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/pf_family_first_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/margin_15"
            android:drawableLeft="@drawable/redline"
            android:drawablePadding="@dimen/margin_15"
            android:padding="@dimen/margin_10"
            android:text="2015 - 11 1000 "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/pf_family_first_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_10"
            android:text="共10000张"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
    <com.wj.kindergarten.compounets.NestedGridView
        android:id="@+id/pf_family_first_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:columnWidth="@dimen/margin_5"
        android:verticalSpacing="@dimen/small_padding"
        android:visibility="visible" />
</LinearLayout>