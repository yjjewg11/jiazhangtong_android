<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/pf_family_fusion_head"/>
    </FrameLayout>
    <com.wj.kindergarten.compounets.NestedGridView
        android:id="@+id/pf_family_first_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:columnWidth="@dimen/margin_5"
        android:verticalSpacing="@dimen/small_padding"
        android:visibility="visible" />
</LinearLayout>