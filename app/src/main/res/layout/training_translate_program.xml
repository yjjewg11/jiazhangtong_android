<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/id_training_translate_program"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="课程名称"
            style="@style/trainContentStyle"
            android:id="@+id/tv_training_classname"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#bbbbbb"
            android:id="@+id/textView8"
            android:layout_toRightOf="@+id/tv_training_classname"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="少儿美术"
            style="@style/trainContentStyle"
            android:id="@+id/tv_training_classname_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#bbbbbb"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="上课时间"
            style="@style/trainContentStyle"
            android:id="@+id/textView10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#bbbbbb"
            android:id="@+id/textView11"
            android:layout_toRightOf="@+id/textView10"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="下午5：30至7：30"
            style="@style/trainContentStyle"
            android:id="@+id/tv_training_classtime"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#bbbbbb"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="上课地点"
            style="@style/trainContentStyle"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#bbbbbb"
            android:id="@+id/textView14"
            android:layout_toRightOf="@+id/textView13"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="中国四川省成都市武侯区"
            style="@style/trainContentStyle"
            android:id="@+id/tv_trainning_adress"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#bbbbbb"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="准备物品"
            style="@style/trainContentStyle"
            android:id="@+id/textView16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#bbbbbb"
            android:id="@+id/textView17"
            android:layout_toRightOf="@+id/textView16"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="铅笔和钢笔"
            style="@style/trainContentStyle"
            android:id="@+id/tv_trainning_preparething"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#bbbbbb"
            android:layout_height="1dp" />
    </RelativeLayout>
</LinearLayout>