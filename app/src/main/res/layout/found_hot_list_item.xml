<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/found_hot_selection_rl"
        android:background="@drawable/seclector_back_ground_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textColor="#313131"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="秋冬季如何让孩子吃好穿暖?"
        android:id="@+id/tv_found_hot_theme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp" />

    <TextView
        android:layout_marginBottom="@dimen/margin_15"
        android:gravity="center"
        android:textSize="@dimen/margin_10"
        android:textColor="@color/white"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:minWidth="30dp"
        android:background="@drawable/found_count_selector"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="299"
        android:id="@+id/tv_found_hot_count"
        android:layout_below="@+id/tv_found_hot_theme"
        android:layout_alignParentLeft="true" />

    <TextView
        android:textColor="@color/textcolor_8e8e8e"
        android:textSize="12sp"
        android:paddingRight="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="每到秋冬季季天气装量，总会有互粉多的孩子感冒生病转，那么责骂么减少这种影响."
        android:id="@+id/tv_found_content"
        android:layout_below="@+id/tv_found_hot_theme"
        android:layout_toRightOf="@+id/tv_found_hot_count" />
    </RelativeLayout>
    <com.wj.kindergarten.compounets.NestedGridView
        android:id="@+id/item_found_hot_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_marginTop="@dimen/normal_padding"
        android:gravity="center"
        android:horizontalSpacing="@dimen/small_padding"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/small_padding"
        android:visibility="gone" />

    <TextView
        android:background="@color/unit_line_division"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />


</LinearLayout>