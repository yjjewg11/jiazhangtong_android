<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseStyle" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppThemeFullNoTitle" parent="@android:style/Theme.NoTitleBar.Fullscreen" />

    <style name="SplashStyle" parent="AppThemeFullNoTitle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppStyle" parent="BaseStyle">
        <item name="android:windowTitleSize">@dimen/title_height</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowAnimationStyle">@style/ActivityNormalAnimation</item>

        <!--<item name="colorPrimary">@color/white</item>-->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
        <!--<item name="colorAccent">@color/white</item>-->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActivityNormalAnimation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
    </style>

    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- popwindow anim -->
    <style name="PopWindowAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="loginButtonStyle">
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/normal_text_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="loginTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="loginEditStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
    </style>

    <style name="detail_left">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
    </style>

    <style name="detail_right" parent="detail_left">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:textColor">@color/normal_text_gray</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- dialog style -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="detail_line">
        <item name="android:layout_marginLeft">@dimen/normal_padding</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="loginCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_check_bg</item>
    </style>

    <style name="ShareAnimBase">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="trainContentStyle">
        <item name="android:textSize">14sp</item>

    </style>
    <style name="AppStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="schooltextstyle" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/hint_gray</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="chagechildinfo">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/color_313131</item>
    </style>

    <style name="edit_child_info">
        <item name="android:textColorHint">@color/color_b9b9b9</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_313131</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">44dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>

    <style name="child_go_to_school">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/color_b9b9b9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="image_child_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
        <item name="android:gravity">bottom</item>
        <item name="android:src">@drawable/xiajiantou_child_go</item>

    </style>

    <style name="click_pic">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/seclector_back_ground_white</item>
    </style>
</resources>
